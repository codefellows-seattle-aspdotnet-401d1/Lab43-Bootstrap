@model IdentityDay2.Models.RegisterViewModel
@{
    Layout = "_Layout";
}

<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

    <div asp-validation-summary="All"></div>
    <h4>Create Your Account </h4>

    <label asp-for="Email"></label>
    <input asp-for="Email" />
    <span asp-validation-for="Email"></span> <br /> <br />

    <label asp-for="Rank"></label>
    <input asp-for="Rank" />
    <span asp-validation-for="Rank"></span><br /> <br />

    <label asp-for="Department" class="control-label"></label>
    <select asp-for="Department" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(IdentityDay2.Models.Channel))"></select>
    <span asp-validation-for="Department" class="text-danger"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password" />
    <span asp-validation-for="Password"></span><br /> <br />

    <label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword" />
    <span asp-validation-for="ConfirmPassword"></span><br /> <br />

    <button type="submit">Register</button>

</form>
